{
  "name": "@blockchain-auth/identity-service",
  "version": "0.0.2",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@blockchain-auth/identity-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@blockchain-auth/identity-service:build:development"
          },
          "production": {
            "buildTarget": "@blockchain-auth/identity-service:build:production"
          }
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
        "options": {
          "jestConfig": "apps/identity-service/jest.config.ts"
        }
      },
      "test:coverage": {
        "executor": "@nx/jest:jest",
        "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
        "options": {
          "jestConfig": "apps/identity-service/jest.config.ts",
          "codeCoverage": true,
          "coverageReporters": ["html", "text"]
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "VERSION=$(node -p \"require('./apps/identity-service/package.json').version\") && docker build -f apps/identity-service/Dockerfile . -t blockchain-auth-identity-service:$VERSION -t blockchain-auth-identity-service:latest"
      }
    }
  }
}
